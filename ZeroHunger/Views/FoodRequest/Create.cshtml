@model ZeroHunger.DTOs.FoodRequest.FoodRequestDTO

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create Food Request</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>

    <div class="container">
        <div class="row">
            <div class="d-flex justify-content-center align-items-center vh-100">
                <div class="bg-white p-3 h-auto">
                    <div class="d-flex align-items-center justify-content-center flex-column" style="width:300px;">
                        <span class="fs-3 fw-semibold pb-3">Create Food Request</span>
                        <span class="text-danger">@Html.ViewBag.Msg</span>
                    </div>
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-group mt-2 mb-4">
                            @Html.LabelFor(model => model.FoodSourceId, "Select Food Source", htmlAttributes: new { @class = "form-label" })

                            @Html.DropDownListFor(model => model.FoodSourceId, new SelectList(ViewBag.FoodSources, "Id", "Name"), "Select Food Source", new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.FoodSourceId, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group mt-2 mb-4">
                            @Html.LabelFor(model => model.FoodNames,"Food Name", htmlAttributes: new { @class = "form-label" })
                            @Html.EditorFor(model => model.FoodNames, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter Food Name" } })
                            @Html.ValidationMessageFor(model => model.FoodNames, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group mt-2 mb-4">
                            @Html.LabelFor(model => model.ExpDate, "Expire Date", htmlAttributes: new { @class = "form-label" })
                            @Html.EditorFor(model => model.ExpDate, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
                            @Html.ValidationMessageFor(model => model.ExpDate, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group mt-2 mb-4">
                            @Html.LabelFor(model => model.NgoId, "Select NGO", htmlAttributes: new { @class = "form-label" })

                            @Html.DropDownListFor(model => model.NgoId, new SelectList(ViewBag.NGOs, "Id", "Name"), "Select NGO", new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.NgoId, "", new { @class = "text-danger" })
                        </div>

                        <div class="mb-4">
                            <button type="submit" class="btn btn-primary w-100">Make Request</button>
                        </div>

                    }
                    <span>@Html.ActionLink("Go To Dashboard", "Index")</span>
                </div>
            </div>
        </div>

    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</body>
</html>
